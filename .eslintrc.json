{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"next",
		"plugin:react/recommended",
		"next/core-web-vitals"
	],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"no-unused-vars": [
			"warn",
			{
				"args": "after-used",
				"argsIgnorePattern": "^_"
			}
		],
		"no-console": "warn",
		"no-use-before-define": "error",
		"quotes": ["error", "double"],
		"semi": ["error", "always"]
	}
}
